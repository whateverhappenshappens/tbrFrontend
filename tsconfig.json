{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true, // Suppresses index errors for implicit 'any' types

    /* Bundler mode */
    "moduleResolution": "Node",
    
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false, // Disables strict mode, relaxing type checks
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"], // Exclude test files if needed
  "references": [{ "path": "./tsconfig.node.json" }]
}
